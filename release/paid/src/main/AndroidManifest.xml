<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tasty.bear"
    android:versionCode="5"
    android:versionName="1.2.1" >

    <uses-sdk android:minSdkVersion="7"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/bb"
        android:label="@string/app_name" android:enabled="true"
        android:name="com.tasty.fish.android.DroidBeatApplication">
        
        <activity
            android:name="com.tasty.fish.android.DroidBeatActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" 
            android:icon="@drawable/bb">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>